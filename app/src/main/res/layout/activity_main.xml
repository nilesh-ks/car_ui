<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#232325">
<ImageView
    android:layout_width="23.71dp"
    android:layout_height="20.77dp"
    android:src="@drawable/back"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginTop="25dp"
    android:layout_marginLeft="25dp"/>

    <ImageView
        android:layout_width="207dp"
        android:layout_height="79.93dp"
        android:paddingStart="20dp"
        android:layout_marginTop="70dp"
        android:src="@drawable/speedcircular"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <ImageView
        android:layout_width="210.63dp"
        android:layout_height="90.92dp"
        android:paddingStart="14dp"
        android:layout_marginTop="150dp"
        android:src="@drawable/mile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <ImageView
        android:layout_width="210.63dp"
        android:layout_height="90.92dp"
        android:paddingStart="18dp"
        android:layout_marginTop="237dp"
        android:src="@drawable/speedbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="206.4dp"
            android:layout_height="428dp"
            android:layout_marginHorizontal="190dp"
            android:layout_marginTop="-60dp"
            android:background="@drawable/cartopview"
            android:rotation="180" />



    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <TextView
        android:id="@+id/txtSpecs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Specifications"
        android:textColor="#ebebeb"
        android:textSize="20dp"
        android:layout_marginBottom="15dp"
        android:layout_marginStart="25dp"
        app:layout_constraintBottom_toTopOf="@+id/scrollView"
        app:layout_constraintStart_toStartOf="parent" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        app:layout_constraintBottom_toTopOf="@+id/relative2"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="20dp"
        android:animateLayoutChanges="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:animateLayoutChanges="true">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/calendar"/>
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:drawableStart="@drawable/cal"
                android:layout_marginLeft="25dp"
                android:background="@drawable/automatic"/>
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="25dp"
                android:src="@drawable/speed"/>
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="25dp"
                android:background="@drawable/petrol"/>



        </LinearLayout>
    </ScrollView>
    <RelativeLayout
        android:id="@+id/relative2"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/layout">
        <ImageView
            android:layout_width="16.5dp"
            android:layout_height="14.93dp"
            android:src="@drawable/star"
            android:layout_alignParentRight="true"
            android:layout_marginRight="170dp"
            android:layout_marginTop="45dp"/>
        <ImageView
            android:layout_width="16.5dp"
            android:layout_height="14.93dp"
            android:src="@drawable/star"
            android:layout_alignParentRight="true"
            android:layout_marginRight="150dp"
            android:layout_marginTop="45dp"/>
        <ImageView
            android:layout_width="16.5dp"
            android:layout_height="14.93dp"
            android:src="@drawable/star"
            android:layout_alignParentRight="true"
            android:layout_marginRight="130dp"
            android:layout_marginTop="45dp"/>
        <ImageView
            android:layout_width="16.5dp"
            android:layout_height="14.93dp"
            android:src="@drawable/star"
            android:layout_alignParentRight="true"
            android:layout_marginRight="110dp"
            android:layout_marginTop="45dp"/>
        <ImageView
            android:layout_width="16.5dp"
            android:layout_height="14.93dp"
            android:src="@drawable/staroutline"
            android:layout_alignParentRight="true"
            android:layout_marginRight="90dp"
            android:layout_marginTop="45dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4.8"
            android:layout_marginTop="40dp"
            android:textColor="#e1e1e1"
            android:textSize="19dp"
            android:layout_marginRight="50dp"
            android:layout_alignParentRight="true"/>


        <TextView
            android:id="@+id/txtAudi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="37dp"
            android:text="Audi A5 2019"
            android:textStyle="normal"
            android:textColor="#ebebeb"
            android:textSize="23dp"/>
        <TextView
            android:id="@+id/txtPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#487ce4"
            android:text="PKR 70 Lacs"
            android:textSize="20dp"
            android:layout_below="@+id/txtAudi"
            android:layout_marginStart="25dp"/>
        <TextView
            android:id="@+id/audiDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#c8c8c9"
            android:text="@string/audi_desc"
            android:layout_below="@+id/txtPrice"
            android:layout_marginHorizontal="25dp"
            android:layout_marginTop="10dp"
            android:lineSpacingExtra="7dp"
            android:layout_centerHorizontal="true"/>
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="290dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:text="Buy Now"
            android:textSize="18dp"
            android:textAllCaps="false"
            android:layout_marginStart="25dp"
            android:textColor="#ebebeb"
            android:background="@drawable/button"
            android:layout_below="@+id/audiDesc"/>
        <ImageButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/fav_border"
            android:layout_below="@+id/audiDesc"
            android:src="@drawable/ic_heart"
            android:layout_alignParentRight="true"
            android:layout_marginRight="25dp"/>

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>